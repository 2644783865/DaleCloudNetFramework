@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/DingTalkManage/Users/GetGridJson",
            height: $(window).height() - 96,
            colModel: [
                { label: "主键", name: "Userid", hidden: true, key: true },
                { label: '用户名称', name: 'Name', width: 150, align: 'left' },
                { label: '工号', name: 'JobNumber', width: 150, align: 'left' },
                { label: '职位信息', name: 'Position', width: 150, align: 'left' },
                { label: '手机号码', name: 'Mobile', width: 150, align: 'left' },
                { label: '电子邮件', name: 'Email', width: 150, align: 'left' },
                {
                    label: "老板", name: "IsBoss", width: 60, align: "center",
                    formatter: function (cellvalue) {
                        return cellvalue == true ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: "管理员", name: "IsAdmin", width: 60, align: "center",
                    formatter: function (cellvalue) {
                        return cellvalue == true ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: "激活", name: "Active", width: 60, align: "center",
                    formatter: function (cellvalue) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                { label: '入职时间', name: 'HiredDate', width: 150, align: 'left' }

            ]
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增员工",
            url: "/DingTalkManage/Users/Form",
            width: "450px",
            height: "380px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Form",
            title: "修改员工",
            url: "/DingTalkManage/Users/Form?keyValue=" + keyValue,
            width: "450px",
            height: "380px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/DingTalkManage/Users/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().Userid;
        $.modalOpen({
            id: "Details",
            title: "查看员工",
            url: "/DingTalkManage/Users/Details?keyValue=" + keyValue,
            width: "450px",
            height: "500px",
            btn: null,
        });
    }
    function btn_updateUser() {
        $.submitPost({
            title: "确定要更新钉钉用户吗？",
            url: "/DingTalkManage/Users/GetDingTalkUser",
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_updateDepart() {
        $.submitPost({
            title: "确定要更新部门信息吗？",
            url: "/DingTalkManage/Department/GetDingTalkDepartment",
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_sendMsg() {
        $.deleteForm({
            url: "/DingTalkManage/Users/SendWrokMsg",
            param: { keyValue: $("#gridList").jqGridRowValue().Userid },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_updateUser()"><i class="fa fa-plus"></i>更新用户</a>
        </div>
        <div class="btn-group">
            <a id="NF-edit" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_updateDepart()"><i class="fa fa-plus"></i>更新部门</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                @*<li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改员工</a></li>*@
                <li><a id="NF-delete" authorize="yes" onclick="btn_sendMsg()"><i class="fa fa-trash-o"></i>发动消息</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看信息</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="用户姓名/电话" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
</div>
